/* pages/partition/partition.wxss */
.classify{
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
    align-items: flex-start;
}
.classify_item{
    width: 25%;
    height: 120rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin: 20rpx 0 20rpx 0;
}
.classify_solo_item{
    flex-grow: 0 !important; 
}
.classify_item image{
    width: 70rpx;
    height: 70rpx;
}
.classify_item view{
   font-size: 22rpx;
   color: rgb(85, 88, 90);
}
/**index.wxss**/
page {
  color: #666;
  background: rgb(238, 234, 234);
}

/* 首页导航 */

.nav_wrap {
  background:#fff;
}

.nav {
  white-space: nowrap;
  padding: 0rpx 10rpx 0 10rpx;
}

.nav_item {
  display: inline-block;
  padding: 0rpx 30rpx 20rpx 30rpx;
  font-size: 25rpx;
}

.nav_item.active {
  border-bottom: 5rpx solid #de688b;
}

/* 轮播图 */

.slides {
  margin-top: 15rpx;
  border-radius: 20rpx;
  padding: 0 10rpx;
}

.slides swiper {
  height: 350rpx;
}

.slides navigator {
  width: 100%;
  height: 100%;
}

.slides image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}

/* 视频列表 */

.video_wrap {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-top: 15rpx;
  padding: 0 10rpx;
}

.vidoe_item {
  width: 49%;
  margin-bottom: 15rpx;
  padding:  0 0 20rpx 0;
  background: #fff;
  border-radius: 15rpx;
}

.video_img {
  position: relative;
}

.video_img image {
  width: 100%;
  border-radius: 15rpx;
}

.video_img .video_info {
  display: flex;
  position: absolute;
  bottom: 20rpx;
  left: 0;
  width: 100%;
  justify-content: space-between;
  font-size: 25rpx;
  color: #fff;
}

.video_img .video_info .play_count_wrap {
  margin-left: 20rpx;
}
.video_img .video_info .play_count_wrap .play_count{
  margin-left: 7rpx;
}

.video_img .video_info .comment_count_row {
  margin-right: 20rpx;
}
.video_img .video_info .comment_count_row .comment_count{
  margin-left: 7rpx;
}

.video_title {
  height: 65rpx;
  line-height: 35rpx;
  font-size: 25rpx;
  overflow: hidden;
  display: -webkit-box;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  padding: 2rpx 10rpx 4rpx 10rpx;
}
.video_title .video_title_content{
 text-align: left;
}
.to-footer{
  font-size: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #f8759d;
  padding: 0 0 10rpx 0;
}
/* pages/detail/detail.wxss */
page {
    color: #666;
}

.main {}

.video_info {}

.video_info video {
    width: 100%;
    display: block;
    margin: 0 auto;
}

.video_info .video_intro {
    height: 75rpx;
    display: flex;
    font-size: 28rpx;
    justify-content: space-between;
    align-items: center;
    box-shadow: 5rpx 6rpx 5rpx rgba(218, 215, 215, 0.425);
}

.video_info .video_intro .intro_desc {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 20rpx;
    height: 100%;
    border-bottom: 5rpx solid #eb789b;
    color: #eb789b;
    font-size: 24rpx;
    margin-left: 50rpx;
}

.video_info .video_intro .intro_comment {
    font-size: 24rpx;
}

.video_info .video_intro .intro_barrage {
    padding: 10rpx 40rpx;
    background-color: rgb(240, 240, 240);
    border-radius: 40rpx;
    color: rgb(150, 152, 155);
    font-size: 24rpx;
    margin-right: 20rpx;
}

.video_auther {
    display: flex;
    font-size: 28rpx;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx 20rpx 0 20rpx;
    margin-top: 5rpx;
}

.video_auther .left {
    display: flex;
    align-items: center;
    justify-content: center;
}

.video_auther .left .img {
    margin-right: 20rpx;
}

.video_auther .left .img image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 40rpx;
}

.video_auther .left .desc {
    display: flex;
    flex-direction: column;
}

.video_auther .left .desc .name {
    color: #eb789b;
    font-size: 26rpx;
}

.video_auther .left .desc .fans_count {
    color: rgb(160, 156, 156);
    font-size: 22rpx;
    margin-top: 4rpx;
}

.video_auther .right {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 45rpx;
    line-height: 45rpx;
    padding: 15rpx 28rpx;
    border-radius: 8rpx;
    background-color: #f16c94;
    font-size: 24rpx;
    color: #fff;
}

.video_info .video_title {
    display: flex;
    line-height: 45rpx;
    justify-content: space-between;
    font-size: 26rpx;
    color: rgb(43, 41, 41);
    margin-top: 20rpx;
    padding: 0 16rpx 0;
}

.video_info .video_detail {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    padding: 10rpx;
    margin-left: 10rpx;
}

.video_info .video_detail view {
    font-size: 22rpx;
    margin-right: 20rpx;
    color: #666;
    margin-top: 0rpx;
}

.video_info .video_detail .video_detail_author {}

.video_info .video_detail .video_detail_playcount {}

.video_info .video_detail .video_detail_commentcount {}

.video_info .video_detail .video_detail_date {}

/*
  推荐视频
  */

.video_other .video_item {
    width: 100%;
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    margin-bottom: 10rpx;
    border-bottom: 1px solid rgb(241, 233, 233);
    padding: 10rpx 18rpx;
}

.video_other .video_item .left {
    flex: 2;
}

.video_other .video_item .left image {
    width: 100%;
    height: 170rpx;
    border-radius: 12rpx;
}

.video_other .video_item .right {
    display: flex;
    flex-direction: column;
    flex: 3;
    font-size: 24rpx;
    margin-left: 20rpx;
}

.video_other .video_item .right .right_title {
    line-height: 30rpx;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.video_other .video_item .right .right_author {
    display: flex;
    margin-top: 45rpx;
    font-size: 24rpx;
}

.video_other .video_item .right .right_desc {
    display: flex;
    margin-top: 10rpx;
    font-size: 22rpx;
}

.video_other .video_item .right .right_desc view {
    margin-right: 50rpx;
}
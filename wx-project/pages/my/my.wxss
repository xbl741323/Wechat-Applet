/* pages/my/my.wxss */
.my {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.my_login_content {
    width: 100%;
    margin-top: 40rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    border-bottom: 2rpx solid #e6e6e6;
    padding-bottom: 40rpx;
}

.my_head {
    width: 120rpx;
    height: 120rpx;
    border-radius: 60rpx;
    margin-bottom: 10rpx;
}

.my_head_name {
    font-size: 28rpx;
}

.my_head_btn {
    color: #ffffff;
    background: #f17cbc;
    font-size: 24rpx;
    border-radius: 10rpx;
    padding: 8rpx 14rpx;
}

.my_layout {
    margin-top: 40rpx;
    font-size: 24rpx;
    color: #bdbaba;
}

.my_option {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    padding: 20rpx;
    font-size: 24rpx;
    border-bottom: 2rpx solid #e6e6e6;
}

.my_option_title{
    margin-left: 40rpx;
    color: #2e2b2b;
}

.my_option_point{
    width: 16rpx;
    height: 16rpx;
    border-top: 2rpx solid #ccc;
    border-right: 2rpx solid #ccc;
    transform: rotate(45deg);
    margin-right: 30rpx;
}
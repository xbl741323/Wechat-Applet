/* pages/my/my.wxss */
.my {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.my_login_content {
    width: 100%;
    margin-top: 20px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    border-bottom: 1px solid #e6e6e6;
    padding-bottom: 20px;
}

.my_head {
    width: 60px;
    height: 60px;
    border-radius: 30px;
    margin-bottom: 5px;
}

.my_head_name {
    font-size: 14px;
}

.my_head_btn {
    color: #ffffff;
    background: #f17cbc;
    font-size: 12px;
    border-radius: 5px;
    padding: 4px 7px;
}

.my_layout {
    margin-top: 20px;
    font-size: 12px;
    color: #bdbaba;
}

.my_option {
    display: flex;
    justify-content: space-between;
    width: 100%;
    padding: 10px;
    font-size: 12px;
    border-bottom: 1px solid #e6e6e6;
}

.my_option_title{
    margin-left: 20px;
    color: #2e2b2b;
}

.my_option_point{
    width: 8px;
    height: 8px;
    border-top: 1px solid #ccc;
    border-right: 1px solid #ccc;
    transform: rotate(45deg);
    margin-right: 15px;
}
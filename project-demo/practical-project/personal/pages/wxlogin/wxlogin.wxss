/* personal/pages/wxlogin/wxlogin.wxss */
page {
  width: 100%;
  height: 100%;
}

.wx_login_box {
  width: 100%;
  height: 100%;
}

.wx_login_box .wt_logo_box {
  width: 100%;
  height: 426rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.wt_logo_box .wt_logo {
  width: 584rpx;
  height: 425rpx;
  border-bottom: 1px solid #eaebef;
}

.wt_logo .wt_box {
  width: 142rpx;
  height: 200rpx;
  margin: 180rpx auto;
}

.wt_box .logo_txt {
  font-size: 30rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  color: #333333;
  display: block;
  margin-top: 24rpx;
  text-align: center;
}

.login_txt {
  margin-bottom: 84rpx;
}

.login_txt .tip_txt1 {
  margin-top: 47rpx;
  font-size: 28rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  text-align: center;
  color: #555555;
}

.login_txt .tip_txt2 {
  margin-top: 26rpx;
  font-size: 24rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Light;
  font-weight: 300;
  text-align: center;
  color: #b4b4b4;
}

.wxlogin_btn_box {
  display: flex;
  justify-content: center;
  align-items: center;
}

.wxlogin_btn {
  width: 628rpx;
  height: 98rpx;
  background: linear-gradient(93deg,#1dabfa 5%, #0179fa 95%);
  border-radius: 25px;
  text-align: center;
  line-height: 98rpx;
  color: #ffffff;
  font-size: 32rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Bold;
  font-weight: 700;
}

.phone-login {
  position: relative;
  display: flex;
  flex-direction: column;
  width: 100%;
}



/*
  登录logo
*/
.bg-sty {
  position: absolute;
  top: 0 !important;
  width: 100% !important;
  height: 404rpx !important;
}

/*
  登录表单
*/
.login-form {
  position: absolute;
  top: 312rpx;
  padding: 80rpx 0;
  width: 100%;
  margin-left: 50%;
  transform: translateX(-50%);
  background: #ffffff;
  border-radius: 40rpx 40rpx 0px 0px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.login-text {
  width: 630rpx;
  display: flex;
  flex-direction: column;
  color: #333333;
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 70rpx;
}

.login-text>text:nth-of-type(2) {
  display: inline-block;
  width: 92rpx;
  height: 2rpx;
  background: #eaebef;
  margin-top: 28rpx;
}

.login-input {
  position: relative;
  width: 630rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  font-size: 28rpx;
  margin-bottom: 50rpx;
}


.login-input>text:nth-of-type(1) {
  color: #333333;
  font-weight: bold;
  font-size: 32rpx;
  margin-bottom: 32rpx;
}

.p-sty {
  font-size: 28rpx;
  color: #B4B4B4;
}

.input-contain>input {
  width: 100%;
  height: 86rpx;
  border-radius: 12rpx;
  background: #F5F7FC;
  padding-left: 18rpx;
}

.error-input {
  transition: 0.5s;
}

.login-input>input {
  font-size: 28rpx;
  color: #555555;
}

.phone-error-code {
  position: absolute;
  bottom: -38rpx;
  left: 0;
  font-size: 24rpx;
  color: red;
}

.login-btn {
  width: 628rpx;
  height: 98rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 46rpx;
  background: linear-gradient(93deg, #1dabfa 5%, #0179fa 95%);
  border-radius: 25px;
  font-family: Source Han Sans CN, Source Han Sans CN-Bold;
}

.msg_input {
  width: 478rpx;
  height: 86rpx;
  border-radius: 12rpx;
  background: #F5F7FC;
  padding-left: 18rpx;
}

.msg_btn {
  width: 200rpx;
  height: 80rpx;
  line-height: 60rpx;
  background: #1ba7fa;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Light;
  font-weight: 300;
  color: #ffffff;
  margin-left: 8rpx;
  padding: 8rpx;
}

.code_sty {
  display: flex;
  justify-content: space-between;
}

/* 
  换绑弹窗样式
*/
.bind-box {
  width: 656rpx;
  height: 320rpx;
  background: #ffffff;
  overflow: hidden;
}

.bind-content {
  width: 656rpx;
  font-size: 28rpx;
  color: #333333;
  font-weight:  bold;
}

.bind-inp {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 240rpx;
  position: relative;
}

.bind-inp text {
  display: inline-block;
  height: 48rpx;
  line-height: 48rpx;
  font-size: 30rpx;
}

.bind-btn {
  width: 100%;
  height: 78rpx;
  display: flex;
  align-items: center;
  text-align: center;
  margin: auto;
  border-top: 0.5rpx solid #e5e6eb;
  font-size: 28rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Bold;
  font-weight: bold;
}

.bind-btn view:nth-of-type(1) {
  flex: 1;
  height: 78rpx;
  line-height: 78rpx;
  color: #1ba7fa;
}

.bind-btn view:nth-of-type(2) {
  flex: 1;
  height: 78rpx;
  line-height: 78rpx;
  border-left: 1rpx solid #e5e6eb;
}


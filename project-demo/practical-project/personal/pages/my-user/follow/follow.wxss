/* personal/pages/my-user/follow/follow.wxss */
page {
  background: #F5F7FB;
  padding-bottom: 120rpx;
}

.generate-order {
  background: #ffffff;
  padding-bottom: 100rpx;
}

.order-item {
  width: 702rpx;
  height: 90rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #EAEBEF;
  font-size: 28rpx;
  margin: 0 auto;
}

.order-item-head {
  display: flex;
  align-items: center;
  color: #7B7B7B;
}

.order-item-foot {
  display: flex;
  align-items: center;
  color: #D9D9D9;
}

.required-sty {
  color: #FF6D27;
}

.pointer-sty {
  display: inline-block;
  width: 0rpx;
  height: 0rpx;
  border-radius: 2rpx;
  border: 12rpx solid #858991;
  border-top-color: #858991;
  border-bottom-color: transparent;
  border-left-color: transparent;
  border-right-color: transparent;
  vertical-align: middle;
}

.generate-head {
  padding-bottom: 24rpx;
}

/*
  操作按钮区域
*/

.btn-contain {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 150rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #ffffff;
  box-shadow: -6rpx -6rpx 8rpx 0 rgba(0, 0, 0, 0.03);
  z-index: 1 !important;
}


.submit-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  color: #FFFFFF;
  font-size: 28rpx;
  width: 656rpx;
  height: 88rpx;
  background: #0082fc;
  border-radius: 44rpx;
}

/*
  公共样式区域
*/
.common-sty {
  width: 100%;
  text-align: left;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.common-bold-sty {
  font-weight: bold !important;
  color: #333333 !important;
}

.certify-sty {
  display: inline-block;
  background: #0082FC;
  color: #ffffff;
  font-size: 24rpx;
  border-radius: 8rpx;
  padding: 4rpx 8rpx;
  margin-left: 8rpx;
}

/*
  跟进内容
*/
.column-sty {
  width: 702rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  font-size: 28rpx;
  margin: 0 auto;
  margin-top: 32rpx;
}

.common-item-textarea {
  margin-top: 16rpx;
  padding: 18rpx;
  width: 654rpx;
  height: 218rpx;
  font-size: 28rpx;
  color: #555555;
  background: #F9FBFC;
}

.upload-foot {
  display: flex;
  align-items: center;
  color: #555555;
  margin-top: 24rpx;
}

.p-sty {
  color: #D9D9D9;
}

.input-sty {
  font-size: 28rpx;
  color: #555555;
  text-align: right;
}

.calendar-sty {
  z-index: 999 !important;
}

.strong-sty {
  color: #555555 !important;
}
/* personal/components/my-order/product-item/product-item.wxss */
.product-item {
  width: 654rpx;
  background: #ffffff;
  margin: 0 auto;
  padding: 32rpx 24rpx;
  border-radius: 10px;
  margin-bottom: 24rpx;
}

/*
  订单编号—状态
*/
.product-head {
  display: flex;
  justify-content: space-between;
}

.head-left {
  display: flex;
  align-items: center;
}

.head-left>text:nth-of-type(1) {
  color: #555555;
  font-size: 28rpx;
}

.head-right {
  display: flex;
  align-items: center;
}

.head-right>text:nth-of-type(1) {
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  background: #0989e8;
  border-radius: 50%;
  margin-right: 8rpx;
}

.head-right>text:nth-of-type(2) {
  color: #555555;
  font-size: 28rpx;
}

/*
  产品名称—数量
*/
.product-name {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 32rpx;
  font-size: 28rpx;
}

.product-name>text:nth-of-type(1) {
  color: #333333;
  font-weight: bold;
}

.product-name>text:nth-of-type(2) {
  color: #7B7B7B;
}


/*
  规格属性
*/
.product-attribute {
  display: flex;
  margin-top: 16rpx;
}

.product-attribute>text {
  display: inline-block;
  background: #C4E2FF;
  border-radius: 8rpx;
  color: #4BA8FF;
  font-size: 24rpx;
  padding: 4rpx 10rpx;
  margin-right: 16rpx;
}

/* 
  客户名称/尾款状态/创建时间
*/
.common-contain {
  display: flex;
  align-items: center;
  color: #7B7B7B;
  font-size: 28rpx;
  margin-top: 16rpx;
}


/*
  按钮区域
*/

.btn-contain {
  border-top: 2rpx solid #EAEBEF;
  display: flex;
  justify-content: space-between;
  padding: 32rpx 0 0 0;
  margin-top: 24rpx;
}

.btn-left {
  display: flex;
  align-items: center;
  font-weight: bold;
  font-size: 28rpx;
}

.btn-left>text:nth-of-type(1) {
  color: #333333;
}

.btn-left>text:nth-of-type(2) {
  color: #FA7A42;
}

.btn-right {
  display: flex;
  align-items: center;
  color: #0082FC;
  font-size: 28rpx;
}

.btn-right>text {
  margin-left: 24rpx;
}

/*
  公共样式
*/
.common-img-sty {
  width: 32rpx;
  height: 32rpx;
  margin-left: 16rpx;
}

.disabled-sty {
  color: #B4B4B4 !important;
}

.disabled-bg-sty {
  background: #EAECF1 !important;
}

.disabled-price-sty {
  color: #555555 !important;
}

.tail-sty {
  color: #FAB042;
}
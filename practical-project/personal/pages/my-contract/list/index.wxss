/* personal/pages/my-contract/list/index.wxss */
page {
  height: 100%;
  background: #F5F7FB;
}

.my-clue {
  display: flex;
  flex-direction: column;
  padding-bottom: 120rpx;
}

.out-drop-sty {
  position: fixed;
  box-shadow: none !important;
  background: #F5F7FB !important;
  height: 50rpx !important;
  width: 100%;
  top: 120rpx;
  /* margin: 125rpx 0 25rpx 0; */
  z-index: 1000 !important;
}

/*
搜索框和背景区域
*/

.top-fixed {
  position: fixed;
  z-index: 10000;
  top: 0;
  left: 0;
  width: 100%;
  height: 120rpx;
  background: #FFFFFF;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 2rpx solid #f7f5f5;
}

.search-contain {
  display: flex;
  width: 640rpx;
  align-items: center;
  height: 72rpx;
  background: #ffffff;
  border-radius: 36rpx;
  border: 2rpx solid #36A6FE;
}

.search-contain-left {
  display: flex;
  justify-content: center;
  align-items: center;
}

.search-contain-left text {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 70rpx;
  margin-left: 30rpx;
  margin-right: 0rpx;
  color: #333333;
  font-size: 28rpx;
  font-weight: bold;
}

.search-contain-left image {
  width: 32rpx;
  height: 32rpx;
}

.lang-sty {
  width: 2rpx;
  height: 40rpx;
  background: #707070;
  margin-left: 12rpx;
  margin-right: 12rpx;
}

.search-contain-right {
  display: flex;
  align-items: center;
}

.search-contain-right image {
  width: 36rpx;
  height: 36rpx;
}

.search-contain-right input {
  width: 420rpx;
  display: inline-block;
  color: #666666;
  font-size: 28rpx;
  margin-left: 8rpx;
}

.active-input-sty {
  width: 350rpx !important;
}

.fixed-search {
  color: #333333;
  font-weight: bold;
  font-size: 28rpx;
  margin-left: 12rpx;
  padding: 20rpx 0;
}

.close-icon {
  position: absolute;
  right: 110rpx;
  z-index: 999 !important;
}

/*
  线索信息卡片列表
*/
.clue-list {
  width: 654rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-top: 240rpx;
  padding: 0 24rpx;
}

.empty-page {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 50%;
}

.empty-page>image {
  width: 320rpx;
  height: 224rpx;
}

.empty-page>text:nth-of-type(1) {
  margin: 12rpx 0;
  color: #555555;
  font-size: 24rpx;
}

/*
 录入合同按钮区域
*/
.enter-btn-contain {
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 112rpx;
  background-color: #ffffff;
}

.enter-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 656rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: #0082fc;
  border-radius: 44rpx;
  color: #FFFFFF;
  font-size: 28rpx;
}
/* personal/pages/my-order/detail/class-member/class-member.wxss */
page {
  background: #F5F7FB;
}

.order-contain {
  width: 702rpx;
  margin: 0 auto;
  margin-top: 24rpx;
  color: #555555;
  font-size: 28rpx;
}

/*
  订单信息
*/
.order-info {
  width: 654rpx;
  background: #ffffff;
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  padding: 20rpx 24rpx 10rpx 24rpx;
}

/*
  订单支付信息
*/
.pay-info {
  width: 654rpx;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 10rpx 24rpx 32rpx 24rpx;
}

/*
  公共样式
*/

.common-delive-sty {
  display: flex;
  height: 80rpx;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #EAEBEF;
}

.common-delive-view {
  display: flex;
  align-items: center;
}

.common-img-sty {
  width: 32rpx;
  height: 32rpx;
  margin-left: 16rpx;
}

.no-height {
  height: auto !important;
  padding-bottom: 24rpx !important;
  align-items: flex-start !important;
  margin-top: 20rpx;
}

.short-height {
  height: 60rpx !important;
}

.hidden-border {
  border: none !important;
}

.add-border {
  padding-bottom: 24rpx !important;
  border-bottom: 2rpx solid #EAEBEF !important;
}

.common-line-sty {
  margin-bottom: 24rpx;
}

.top-sty {
  margin-top: 24rpx;
}

.strong-sty {
  font-weight: bold;
}

.small-font {
  font-size: 24rpx !important;
}

.overflow-sty {
  display: inline-block;
  width: 400rpx;
}

.vip-sty {
  display: inline-block;
  text-align: center;
  padding: 4rpx 2rpx;
  width: 68rpx;
  height: 28rpx;
  line-height: 28rpx;
  background: #0082fc;
  border-radius: 8rpx;
  color: #FFFFFF;
  font-size: 24rpx;
  margin-left: 8rpx;
  font-weight: normal !important;
}

.gray-sty {
  color: #B4B4B4;
  font-weight: normal !important;
}

.blue-sty {
  color: #0082FC;
}

.orange-sty {
  color: #FF6D27;
}
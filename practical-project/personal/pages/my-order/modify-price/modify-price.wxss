  display: flex;
  justify-content: center;
  align-items: center;
  width: 654rpx;
  height: 88rpx;
  background: #0082fc;
  border-radius: 44rpx;
  color: #FFFFFF;
  font-size: 28rpx;
  margin: 0 auto;
  margin-top: 48rpx;
}
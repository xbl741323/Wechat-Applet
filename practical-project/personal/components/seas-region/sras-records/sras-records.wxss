/* personal/components/seas-region/sras-records/sras-records.wxss *//* personal/components/my-clue/order-records/order-records.wxss */

page {
  background: #F5F7FB;
}

.order-records {
  padding-top: 150rpx;
}

.out-drop-sty {
  width: 100%;
  box-shadow: none !important;
  background: #F5F7FB !important;
  height: 50rpx !important;
  margin: 10rpx 25rpx 25rpx -25rpx;
  font-size: 10rpx;
  padding: 8rpx;
  padding: 25rpx 0 15rpx 0;
  position: fixed;
  top: 68rpx;
}

.choice-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 20rpx 16rpx 30rpx -50rpx;
}

.order-choice-header {
  height: 40rpx;
  border: 1px solid #0f0;
  margin: 25rpx 0 25rpx 0;
}

.choice-header-left {
  font-size: 35rpx;
  font-size: 600;
  position: relative;
  left: 50%;
}

.choice-header-right {
  color: #999;
  font-size: 28rpx;
}

.order-item {
  width: 702rpx;
  height: 90rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #EAEBEF;
  font-size: 28rpx;
  margin: 0 auto;
}

.order-item-head {
  display: flex;
  align-items: center;
  color: #7B7B7B;
}

.order-item-foot {
  align-items: center;
  color: #7B7B7B;
}

.required-sty {
  color: #FF6D27;
}

.pointer-sty {
  display: inline-block;
  width: 16rpx;
  height: 16rpx;
  border-top: 2rpx solid #7B7B7B;
  border-right: 2rpx solid #7B7B7B;
  transform: rotate(45deg);
  margin-left: 8rpx;
}

.order-status {
  padding: 22rpx;
}

.order-status-title {
  font-size: 28rpx;
  color: #000;
  font-weight: 700;
}

.blue-circular {
  width: 12rpx;
  height: 12rpx;
  display: inline-block;
  border-radius: 50%;
  background: #36a6fe;
  margin-right: 12rpx;
}

.order-status-title {
  margin: 20rpx;
}

.status-btns {
  width: 702rpx;
}

.order-status-btn {
  display: inline-block;
  background: #F6F6F6;
  border-radius: 2rpx;
  width: 150rpx;
  height: 60rpx;
  color: #555555;
  text-align: center;
  line-height: 60rpx;
  font-size: 28rpx;
  margin: 10rpx;
}

.common-btn {
  display: flex;
  justify-content: center;
  margin-top: 32rpx;
  margin-bottom: 48rpx;
}

.common-btn>text {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 344rpx;
  height: 80rpx;
  line-height: 80rpx;
  border: 2rpx solid #0082fc;
  border-radius: 20rpx;
  color: #0082FC;
  font-size: 28rpx;
}

.common-btn>text:nth-of-type(2) {
  color: #FFFFFF !important;
  background: #0082FC;
  margin-left: 14rpx;
}

.input-sty {
  font-size: 28rpx;
  color: #7B7B7B;
  width: 450rpx;
}

.p-sty {
  color: #7B7B7B;
}

.active-sty {
  color: #FFFFFF !important;
  background: #0082FC;
}

/*
  空列表
*/
.empty-page {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 50%;
}

.empty-page>image {
  width: 320rpx;
  height: 224rpx;
}

.empty-page>text:nth-of-type(1) {
  margin: 12rpx 0;
  color: #555555;
  font-size: 24rpx;
}
/* personal/components/my-order/product-item/product-item.wxss */
.product-item {
  width: 654rpx;
  background: #ffffff;
  margin: 0 auto;
  padding: 32rpx 24rpx;
  border-radius: 10px;
  margin-bottom: 24rpx;
}

/*
  订单编号—状态
*/
.product-head {
  display: flex;
  justify-content: space-between;
}

.head-left {
  display: flex;
  align-items: center;
}

.head-left>text:nth-of-type(1) {
  color: #555555;
  font-size: 28rpx;
}

.head-right {
  display: flex;
  align-items: center;
}

.head-right>text:nth-of-type(1) {
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  background: #0989e8;
  border-radius: 50%;
  margin-right: 8rpx;
}

.head-right>text:nth-of-type(2) {
  color: #555555;
  font-size: 28rpx;
}

/*
  产品名称—数量
*/
.product-name {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 32rpx;
  font-size: 28rpx;
}

.product-name>text:nth-of-type(1) {
  color: #333333;
  font-weight: bold;
}

.product-name>text:nth-of-type(2) {
  color: #7B7B7B;
}


/*
  规格属性
*/
.product-attribute {
  display: flex;
  margin-top: 16rpx;
}

.product-attribute>text {
  display: inline-block;
  background: #C4E2FF;
  border-radius: 8rpx;
  color: #4BA8FF;
  font-size: 24rpx;
  padding: 4rpx 10rpx;
  margin-right: 16rpx;
}

/* 
  客户名称/尾款状态/创建时间
*/
.common-contain {
  display: flex;
  align-items: center;
  color: #7B7B7B;
  font-size: 28rpx;
  margin-top: 16rpx;
}


/*
  按钮区域
*/

.btn-contain {
  border-top: 2rpx solid #EAEBEF;
  display: flex;
  justify-content: space-between;
  padding: 32rpx 0 0 0;
  margin-top: 24rpx;
}

.btn-left {
  display: flex;
  align-items: center;
  font-weight: bold;
  font-size: 28rpx;
}

.btn-left>text:nth-of-type(1) {
  color: #333333;
}

.btn-left>text:nth-of-type(2) {
  color: #FA7A42;
}

.btn-right {
  display: flex;
  align-items: center;
  color: #0082FC;
  font-size: 28rpx;
}

.btn-right>text {
  margin-left: 24rpx;
}

/*
  公共样式
*/
.common-img-sty {
  width: 32rpx;
  height: 32rpx;
  margin-left: 16rpx;
}

.disabled-sty {
  color: #B4B4B4 !important;
}

.disabled-bg-sty {
  background: #EAECF1 !important;
}

.disabled-price-sty {
  color: #555555 !important;
}

.tail-sty {
  color: #FAB042;
}
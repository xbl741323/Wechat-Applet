/* personal/components/my-order/expense-info/expense-info.wxss */
.expense-head {
  display: flex;
  align-items: center;
  color: #333333;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.expense-head>text:nth-of-type(1) {
  display: inline-block;
  width: 16rpx;
  height: 16rpx;
  background: #0082fc;
  border-radius: 8rpx;
  margin-right: 16rpx;
}

.expense-info {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx 24rpx 6rpx 24rpx;
  margin-bottom: 24rpx;
}

.expense-item {
  display: flex;
  justify-content: space-between;
  color: #555555;
  font-size: 28rpx;
  margin-bottom: 48rpx;
}

.expense-total-sty {
  margin-bottom: 28rpx !important;
}

.expense-item>text:nth-of-type(2) {
  font-weight: bold;
}

.check-sty {
  color: #0082FC !important;
  border-bottom: 2rpx solid #0082FC;
}

.check-sty-no {
  color: #0082FC !important;
}

.expense-info-item {
  margin-bottom: 30rpx;
}

/*
  展示付款记录
*/
.wrapper {
  position: relative;
  width: 600rpx;
  height: 400rpx;
  margin: 0 auto;
  padding: 80rpx 50rpx 50rpx 50rpx;
  margin-top: 50%;
  border-radius: 20rpx;
  background: #ffffff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.close-sty {
  font-size: 60rpx;
  top: 0rpx;
  right: 20rpx;
  position: absolute;
  transform: rotate(45deg);
}

.wrapper-img {
  width: 100%;
  height: 100%;
}
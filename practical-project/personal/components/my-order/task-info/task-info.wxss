.no-task {
  padding: 50rpx 24rpx 6rpx 50rpx;
  color: #555555;
  font-size: 30rpx;
}

.no-task-item {
  font-size: 36rpx;
  font-weight: 700;
  color: #0082FC;
}

.task-list {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx 24rpx 6rpx 24rpx;
  margin-bottom: 24rpx;
}

.list-item {
  display: flex;
  justify-content: space-between;
  color: #555555;
  font-size: 28rpx;
  margin-bottom: 48rpx;
}

.special-sty {
  display: flex;
  justify-content: flex-end !important;
  align-items: center;
}

.list-total-sty {
  margin-bottom: 28rpx !important;
}


/* pages/classRoom/classRoom.wxss */
/* 分类列表 */
page {
  width: 100%;
  height: 100%;
}

.classify-list {
  width: 100%;
  overflow-x: hidden;
}

.fixed-content {
  position: fixed;
  width: 100%;
  top: 0;
  left: 0;
  background: #fff;
  z-index: 1000;
}

.scroll-contain {
  width: 100%;
  white-space: nowrap;
  overflow-x: hidden;
}

.new-scroll {
  display: flex;
  padding: 0 24rpx;
}

.scroll-item {
  position: relative;
  margin-right: 40rpx;
  width: 134rpx;
  height: 80rpx;
  color: #999999;
  font-size: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.scroll-item>text:nth-of-type(2) {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  display: inline-block;
  width: 42rpx;
  height: 10rpx;
  border-radius: 6rpx;
  background: #418AFE;
  margin-top: 18rpx;
}

.active-scroll-sty {
  color: #0082FC !important;
  font-size: 32rpx !important;
  font-weight: bold;
}

.course-list {
  width: 100%;
  margin-top: 80rpx;
  background: #ffffff;
  border-radius: 20rpx 20rpx 0 0;
  height: 100%;
}

.more-course {
  display: flex;
  width: 671rpx;
  margin-left: 50%;
  transform: translate(-50%);
  justify-content: center;
  align-items: center;
  border-top: 2rpx solid #E5E5E6;
  padding: 28rpx 28rpx 16rpx 28rpx;
  margin-top: 19rpx;
}

.more-course text {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 670rpx;
  height: 80rpx;
  background: #edf2fa;
  border-radius: 0px 0px 20rpx 20rpx;
  color: #418AFE;
  font-weight: bold;
  font-size: 28rpx;
}

.classify-img {
  width: 697rpx;
  height: 168rpx;
  margin-left: 50%;
  transform: translate(-50%);
  border-radius: 8rpx;
  margin-top: 43rpx;
}

/* 加载中与加载完成提示 */
.lading-tip {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  margin-top: 60rpx;
  margin-bottom: 20rpx;
  color: #999999;
  padding-bottom: 120rpx;
}
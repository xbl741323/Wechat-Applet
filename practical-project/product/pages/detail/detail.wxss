/* product/pages/detail/detail.wxss */
page {
  background: #EFF2F3;
}

.product-img {
  width: 100%;
}

.bg-img {
  width: 100%;
  height: 502rpx;
}

/* 价格 */
.service-price {
  width: 100%;
  height: 111rpx;
  background: url('https://static.wotao.com/icon/head/073fa2509eaf45bfa944868711f6e63b.png') no-repeat center/cover;
  display: flex;
  align-items: center;
  position: relative;
}

.service-item {
  margin-left: 24rpx;
  display: flex;
  width: 50%;
  justify-content: space-between;
}

.justify-left {
  justify-content: flex-start !important;
}

.attribute-txt {
  max-width: 150rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
}

.markyuan {
  font-size: 22rpx;
}

.item-name {
  font-size: 22rpx;
  color: #ffffff;
}

.item-price {
  font-size: 26rpx;
  color: #fed91f;
  margin-left: 8rpx;
}

.area {
  display: flex;
  width: 300rpx;
  position: absolute;
  right: 0;
  justify-content: center;
  font-size: 24rpx;
}

.area view {
  color: #fff;
  text-align: center;
}

.area>view:first-child {
  flex: 1;
  max-width: 160rpx;
  border-right: 2rpx solid #ffffff;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
}

.area>view:last-child {
  width: 140rpx;
  text-align: center;
}

.area p {
  font-size: 24rpx;
}

.area .mb {
  margin-bottom: 8rpx;
}

/* 主体 */
.details {
  padding: 19rpx 12rpx 0 12rpx;
}

.productservice {
  background: #ffffff;
  border-radius: 20rpx;
}

.service-box {
  padding: 24rpx;
}

.product-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #333333;
  margin-bottom: 18rpx;
}

.product-sologan {
  color: #b7b4b4;
  font-size: 26rpx;
  color: #b7b4b4;
  margin-bottom: 24rpx;
}

.advantage {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 18rpx;
}

.advantage-img {
  width: 24rpx;
  height: 24rpx;
  margin-right: 6rpx;
}

.advantage view {
  flex: 1;
  display: flex;
  align-items: center;
}

.advantage-text {
  font-size: 24rpx;
  color: #555555;
}

.product-fee {
  margin-top: 20rpx;
  background: #ffffff;
  border-radius: 20rpx;
}

.fee-detail {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 24rpx;
}

.guanfee {
  font-size: 26rpx;
  color: #b7b4b4;
}

.guanprice {
  font-size: 26rpx;
  color: #fbab2b;
  font-weight: 700;
  margin-left: 52rpx;
}

.dark {
  color: #555;
}

.more {
  width: 12rpx;
  height: 23rpx;
}

/*
固定导航头区域
*/

.nav-bar {
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  background: #FFFFFF;
  z-index: 99;
}

.nav-bar-item {
  flex: 1;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  color: #999999;
  font-size: 32rpx;
}

.active-nav-sty {
  color: #333333;
  font-size: 36rpx;
}

.nav-bar-item>text:nth-of-type(2) {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  display: inline-block;
  width: 32rpx;
  height: 6rpx;
  background: #36a6fe;
}

/*
内容区域
*/

.product-content {
  width: 701rpx;
  margin-top: 24rpx;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 32rpx;
  padding-bottom: 140rpx;
}

.pc-item {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}

.pc-item-title {
  color: #333333;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 32rpx !important;
}

.pc-item-title>text:nth-of-type(1) {
  display: inline-block;
  width: 8rpx;
  height: 32rpx;
  background: #36a6fe;
  border-radius: 0px 8rpx 8rpx 0px;
  margin-right: 16rpx;
}

.pc-item-content {
  width: 690rpx;
  padding: 12rpx;
}

/*
 底部按钮区域
*/
.foot {
  height: 98rpx;
  width: 100%;
  background: #fff;
  position: fixed;
  z-index: 9999;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  border-top: 1px solid #ECEEEF;
  background-color: #0082FC;
  color: #fff;
  font-size: 28rpx;
  border-radius: 15rpx;
}

.foot-img {
  width: 44rpx;
  height: 44rpx;
}

.foot-price {
  color: #FF3627;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 30rpx;
  margin-left: 20rpx;
}

.foot-icon {
  width: 20rpx;
  height: 20rpx;
  margin-right: 10rpx
}

/* dialog */
.popImg {
  width: 244rpx;
  height: 172rpx;
  border-radius: 15rpx;
  margin-bottom: 24rpx;
  margin-right: 30rpx;
}

.dialog {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 98rpx;
  border-radius: 25rpx 25rpx 0 0;
  background: #fff;
  z-index: 1000;
}

.attribute {
  padding: 36rpx 24rpx 76rpx 24rpx;
}

.attrleft {
  font-weight: 700;
  font-size: 28rpx;
  color: #555555;
  margin: 12rpx 0;
}

.attrright {
  display: flex;
  align-items: center;
}

.attrright .attributeItem {
  padding: 10rpx 12rpx 12rpx 10rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  margin-right: 8rpx;
  font-size: 28rpx;
  color: #666;
  display: inline-block;
  text-align: center;
}

.activeTip {
  background: #eff7ff !important;
  color: #0082fc !important;
}

.attribute .flex {
  display: flex;
  margin-top: 50rpx;
  justify-content: space-between;
  align-items: center;
  padding-right: 12rpx;
}

.flex .att {
  font-weight: 700;
  font-size: 28rpx;
  color: #555555;
}

.buy {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #eff7ff;
  border-radius: 8rpx;
  color: #0082fc;
  font-weight: 700;
  font-size: 28rpx;
  display: inline-block;
  text-align: center;
  margin: 0 32rpx;
}

.min {
  font-weight: 700;
  font-size: 40rpx;
}

.a {
  color: #555555;
  font-size: 28rpx;
  margin-right: 12rpx;
}

.popfee .b {
  font-weight: 700;
  font-size: 26rpx;
  color: #fa7a42;
}

.popfee .second {
  margin-top: 8rpx;
}

.disable-btn {
  background: #ccc !important;
}

/*
遮罩样式
*/
.global-tip {
  position: fixed;
  width: 100%;
  height: 100vh;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 100;
}